<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    tools:context="com.octagonproject.octagon.OurStoreActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/store_header" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/store_header_text" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:text="@string/our_publications"
                android:textColor="@color/golden_text"
                android:textSize="@dimen/font_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_transparent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/merged_gospels_book"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_18" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/book_cover_front" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_10"
                            android:text="@string/enlarge"
                            android:textColor="@color/golden_text"
                            android:textSize="@dimen/font_16" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_5"
                            android:text="Printed Book"
                            android:textColor="@color/golden_text"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$29.95"
                                android:textColor="@color/golden_text"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margin_5"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_5"
                            android:text="eBook"
                            android:textColor="@color/golden_text"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$19.95"
                                android:textColor="@color/golden_text"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margin_5"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/book_text_short"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_book_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/book_text_large"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_more_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="More..."
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_16" />

                <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:background="@color/black_transparent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/merged_gospels_audio"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_18" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="200dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/audio_book_front" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_10"
                            android:text="@string/enlarge"
                            android:textColor="@color/golden_text"
                            android:textSize="@dimen/font_16" />

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_5"
                            android:text="7 CD's"
                            android:textColor="@color/golden_text"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$29.95"
                                android:textColor="@color/golden_text"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margin_5"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/margin_5"
                            android:text="MP3 Download"
                            android:textColor="@color/golden_text"
                            android:textSize="@dimen/font_16" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$19.95"
                                android:textColor="@color/golden_text"
                                android:textSize="@dimen/font_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/margin_5"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:text="@string/audio_text_short"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_audio_large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/audio_text_large"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_more_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="More..."
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_16" />


            </LinearLayout>




            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20" />

            <include layout="@layout/layout_footer" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_60" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/jump_to_tour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="@string/shopping_cart"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />

        <Space
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/off_yellow"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="@string/checkout"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_14"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>

