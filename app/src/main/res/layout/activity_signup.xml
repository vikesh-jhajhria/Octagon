<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    android:orientation="vertical"
    tools:context="com.octagonproject.octagon.SignupActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/signup" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/signup_text" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:padding="@dimen/margin_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="@string/in_order"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/textColorPrimary"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login_to_existing"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_20"
                    android:id="@+id/textView" />


                <Button
                    android:id="@+id/btn_login_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_25"
                    android:background="@drawable/fb_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="OR"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_18" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/white"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/white"
                    android:hint="@string/text_password"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/txt_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="Forgot your password?"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_16" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@color/yellow"
                    android:layout_marginLeft="@dimen/margin_35"
                    android:layout_marginRight="@dimen/margin_35"
                    android:text="@string/sign_in"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:background="@color/textColorPrimary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/create_account"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_20" />


                <Button
                    android:id="@+id/btn_reg_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_25"
                    android:background="@drawable/fb_btn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="OR"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_18" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_reg_fname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:hint="@string/fname"
                    android:layout_marginTop="@dimen/margin_10"
                    android:inputType="textCapWords"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />


                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_reg_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/white"
                    android:hint="@string/lname"
                    android:inputType="textCapWords"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/white"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_reg_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/white"
                    android:hint="@string/text_username"
                    android:inputType="text"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/txt_reg_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@android:color/white"
                    android:hint="@string/text_password"
                    android:inputType="textPassword"
                    android:padding="@dimen/margin_8"
                    android:textSize="@dimen/font_14" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@color/yellow"
                    android:text="@string/register"
                    android:layout_marginLeft="@dimen/margin_35"
                    android:layout_marginRight="@dimen/margin_35"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_16" />


            </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_20" />

            <include layout="@layout/layout_footer" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_toolbar" />
</RelativeLayout>
