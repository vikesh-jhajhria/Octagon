<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_home_header" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_home_page_mobile_video1" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center"
                                android:text="@string/trailer_1"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/activity_horizontal_margin"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_home_page_mobile_video2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center"
                                android:text="@string/trailer_2"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/off_white"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:gravity="center"
                            android:text="@string/travel_all"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/font_20" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent_white">

                            <ImageView
                                android:id="@+id/img_stunning"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/stunning" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@+id/img_stunning"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-35dp"
                                android:src="@drawable/orange1" />

                            <TextView
                                android:id="@+id/txt_stunning"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_stunning"
                                android:layout_marginTop="@dimen/margin_35"
                                android:gravity="center"
                                android:text="@string/stunning_realism"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_stunning"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/stunning_realism_text"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_35"
                            android:background="@color/transparent_white">

                            <ImageView
                                android:id="@+id/img_over_site"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/over225" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/img_over_site"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-35dp"
                                android:src="@drawable/yellow1" />

                            <TextView
                                android:id="@+id/txt_over_site"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_over_site"
                                android:layout_marginTop="@dimen/margin_35"
                                android:gravity="center"
                                android:text="@string/over_sites"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_over_site"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/over_sites_text"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_35"
                            android:background="@color/transparent_white">

                            <ImageView
                                android:id="@+id/img_free"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/free_subscription" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/img_free"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-35dp"
                                android:src="@drawable/green1" />

                            <TextView
                                android:id="@+id/txt_free"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_free"
                                android:layout_marginTop="@dimen/margin_35"
                                android:gravity="center"
                                android:text="@string/free_subscription"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_free"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/free_subscription_text"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_60" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/go_to_tours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/go_to_tours"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="@dimen/activity_horizontal_margin"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/free_signup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/off_yellow"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/free_signup"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/layout_toolbar" />


    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        app:headerLayout="@layout/nav_header_home"
        app:menu="@menu/activity_home_drawer" />

</android.support.v4.widget.DrawerLayout>
