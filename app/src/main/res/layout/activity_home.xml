<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_home_header" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/home_header" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.google.android.youtube.player.YouTubePlayerView
                                android:id="@+id/youtube_view1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center"
                                android:text="@string/trailer_1"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/activity_horizontal_margin"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <com.google.android.youtube.player.YouTubePlayerView
                                android:id="@+id/youtube_view2"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center"
                                android:text="@string/trailer_2"
                                android:textColor="@color/textColorPrimary"
                                android:textSize="@dimen/font_14" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/off_white"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:gravity="center"
                            android:text="@string/travel_all"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/font_20" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent_white">

                            <ImageView
                                android:id="@+id/img_stunning"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/stunning" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@+id/img_stunning"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-35dp"
                                android:src="@drawable/orange1" />

                            <TextView
                                android:id="@+id/txt_stunning"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_stunning"
                                android:layout_marginTop="@dimen/margin_35"
                                android:gravity="center"
                                android:text="@string/stunning_realism"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_stunning"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/stunning_realism_text"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_35"
                            android:background="@color/transparent_white">

                            <ImageView
                                android:id="@+id/img_over_site"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/over225" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/img_over_site"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-35dp"
                                android:src="@drawable/yellow1" />

                            <TextView
                                android:id="@+id/txt_over_site"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_over_site"
                                android:layout_marginTop="@dimen/margin_35"
                                android:gravity="center"
                                android:text="@string/over_sites"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_over_site"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/over_sites_text"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_35"
                            android:background="@color/transparent_white">

                            <ImageView
                                android:id="@+id/img_free"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/free_subscription" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/img_free"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="-35dp"
                                android:src="@drawable/green1" />

                            <TextView
                                android:id="@+id/txt_free"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_free"
                                android:layout_marginTop="@dimen/margin_35"
                                android:gravity="center"
                                android:text="@string/free_subscription"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_free"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/free_subscription_text"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:background="@color/black_transparent"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:gravity="center"
                            android:text="@string/para_2_heading"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/font_20" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:gravity="center"
                            android:text="@string/para_2_text"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/font_14" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_rect_gray">

                            <TextView
                                android:id="@+id/para1_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_zone_2_header_1"
                                android:gravity="right"
                                android:paddingBottom="@dimen/margin_12"
                                android:paddingRight="@dimen/margin_25"
                                android:paddingTop="@dimen/margin_12"
                                android:text="@string/para_2_sec_1_heading"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_para1"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_below="@id/para1_header"
                                android:scaleType="fitXY"
                                android:src="@drawable/zone_picture_1" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/para1_header"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:layout_marginTop="-30dp"
                                android:src="@drawable/zone_icon_1" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_para1"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/para_2_sec_1_text"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:background="@drawable/border_rect_gray">

                            <TextView
                                android:id="@+id/para2_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_zone_2_header_2"
                                android:gravity="right"
                                android:paddingBottom="@dimen/margin_12"
                                android:paddingRight="@dimen/margin_25"
                                android:paddingTop="@dimen/margin_12"
                                android:text="@string/para_2_sec_2_heading"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_para2"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_below="@id/para2_header"
                                android:scaleType="fitXY"
                                android:src="@drawable/zone_picture_2" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/para2_header"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:layout_marginTop="-30dp"
                                android:src="@drawable/zone_icon_2" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_para2"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/para_2_sec_2_text"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:background="@drawable/border_rect_gray">

                            <TextView
                                android:id="@+id/para3_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/home_zone_2_header_3"
                                android:gravity="right"
                                android:paddingBottom="@dimen/margin_12"
                                android:paddingRight="@dimen/margin_25"
                                android:paddingTop="@dimen/margin_12"
                                android:text="@string/para_2_sec_3_heading"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_18"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/img_para3"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:layout_below="@id/para3_header"
                                android:scaleType="fitXY"
                                android:src="@drawable/zone_picture_3" />

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_below="@id/para3_header"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:layout_marginTop="-30dp"
                                android:src="@drawable/zone_icon_3" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_para3"
                                android:gravity="center"
                                android:padding="@dimen/activity_horizontal_margin"
                                android:text="@string/para_2_sec_3_text"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_14" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/off_white"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:gravity="center"
                            android:text="@string/shop_at_octagon"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/font_20" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/zone_picture_4" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/online_360"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_18"
                                    android:padding="@dimen/margin_10"
                                    android:background="@color/textColorSecondary"/>

                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:background="@android:color/white"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_1">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/zone_picture_5" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/merged_gospels"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/font_18"
                                    android:padding="@dimen/margin_10"
                                    android:background="@color/textColorSecondary"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_60" />
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/go_to_tours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/go_to_tours"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="@dimen/activity_horizontal_margin"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/free_signup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/off_yellow"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/free_signup"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/layout_toolbar" />


    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/black_transparent"
        android:fitsSystemWindows="true">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_65"
                    android:gravity="center"
                    android:text="FREE SIGNUP"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/online_tours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="ONLINE 360° TOURS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/our_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="SHOP"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/live_tours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="LIVE TOURS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/customer_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="CUSTOMER COMMENTS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/scholarly_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="SCHOLARLY REVIEWS"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/shopping_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="SHOPPING CART"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/store_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="CHECKOUT"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/social_sites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:gravity="center"
                    android:text="SOCIAL SITES"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
